{
  "compilerOptions": {
    "target": "ES2020", // 최신 JS 문법 지원
    "module": "ESNext", // ESM 사용
    "moduleResolution": "Node",
    "esModuleInterop": true, // CommonJS 호환
    "forceConsistentCasingInFileNames": true,
    "strict": true, // 타입 검사 엄격하게
    "skipLibCheck": true, // 빌드 속도 향상
    "outDir": "dist" // 빌드 결과물 저장 경로
  },
  "include": ["./**/*.ts"], // 프로젝트 내 모든 .ts 파일 포함
  "exclude": ["node_modules", "dist"] // 제외할 폴더
}
